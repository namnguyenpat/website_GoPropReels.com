---
interface Props {
  firmName: string;
  discount: string;
  themeColor?: string;
  dealId?: string;
  forceTheme?: 'cyber' | 'minimal' | 'liquid' | 'tech' | 'bold';
  variant?: 'full' | 'background';
  category?: string;
  keyBenefit?: string;
  logo?: string;
}

const { 
  firmName, 
  discount, 
  themeColor = '#FF2D55', 
  dealId = '', 
  forceTheme,
  variant = 'full',
  category,
  keyBenefit,
  logo
} = Astro.props;

// Deterministic style selection based on firmName or dealId
const getThemeIndex = (str: string) => {
  let hash = 0;
  for (let i = 0; i < str.length; i++) {
    hash = str.charCodeAt(i) + ((hash << 5) - hash);
  }
  return Math.abs(hash % 5); // 5 distinct themes
};

const themeIndex = getThemeIndex(dealId || firmName);
const themes = ['cyber', 'minimal', 'liquid', 'tech', 'bold'] as const;
const currentTheme = forceTheme || themes[themeIndex];

// Extract initials for watermark
const initials = firmName
  .split(/[\s-]/)
  .map(word => word[0])
  .join('')
  .toUpperCase()
  .slice(0, 2);
---

<div 
  class={`dynamic-poster-container theme-${currentTheme} variant-${variant} relative flex h-full min-h-[420px] w-full items-center justify-center overflow-hidden rounded-3xl`}
  style={`--accent-color: ${themeColor}`}
>
  <!-- SVG Grain/Noise Filter -->
  <svg class="absolute inset-0 opacity-[0.04] pointer-events-none z-50 h-full w-full">
    <filter id="noise">
      <feTurbulence type="fractalNoise" baseFrequency="0.65" numOctaves="3" stitchTiles="stitch" />
      <feColorMatrix type="saturate" values="0" />
    </filter>
    <rect width="100%" height="100%" filter="url(#noise)" />
  </svg>

  <!-- Watermark -->
  <div class="watermark absolute inset-0 flex items-center justify-center pointer-events-none select-none overflow-hidden">
    <span class="text-[18rem] font-black leading-none opacity-[0.03]">{initials}</span>
  </div>

  <!-- Background Layer -->
  <div class="background-layer absolute inset-0"></div>
  
  <!-- Content Overlay -->
  <div class={`relative z-10 flex flex-col items-center text-center px-6 w-full ${variant === 'background' ? 'justify-start pt-8 h-full' : 'justify-center'}`}>
    <div class={`flex flex-col items-center gap-4 w-full animate-fade-in-up ${variant === 'background' ? 'scale-[0.85] origin-top' : 'p-6 md:p-10'}`}>
      
      {(category && variant !== 'background') && (
        <span class="category-tag mb-4 rounded-full border border-white/20 bg-white/5 px-4 py-1 text-[10px] font-black uppercase tracking-[0.3em] text-white/60">
          {category}
        </span>
      )}

      {variant !== 'background' && (
        <>
          <h2 class="firm-name font-black uppercase tracking-widest text-white drop-shadow-2xl">
            {firmName}
          </h2>

          {logo && (
            <div class="mb-6 flex animate-fade-in items-center justify-center">
                <div class="logo-wrapper h-20 w-32 flex items-center justify-center p-2 rounded-xl bg-white/5 backdrop-blur-sm border border-white/10 shadow-lg">
                    <img 
                        src={logo} 
                        alt={firmName} 
                        class="max-h-12 max-w-[100px] object-contain brightness-110 contrast-125 transition-opacity" 
                        onerror={`window.handleLogoError(this, "${firmName}");`}
                    />
                </div>
            </div>
          )}


          <p class="discount-text font-black text-white leading-none drop-shadow-2xl">
            {discount}
          </p>

          {keyBenefit && (
            <p class="key-benefit mt-4 text-[11px] font-bold uppercase tracking-[0.2em] text-brand-accent drop-shadow-lg opacity-90">
              {keyBenefit}
            </p>
          )}
        </>
      )}
      
      {variant === 'full' && (
          <div class="badge mt-6 flex items-center gap-2">
            <div class="flex items-center gap-1 rounded-full bg-[#00b67a]/10 border border-[#00b67a]/30 px-4 py-1.5 backdrop-blur-md">
              <i class="fa-solid fa-star text-[10px] text-[#00b67a]"></i>
              <span class="text-[10px] font-black uppercase tracking-[0.2em] text-white">
                Trust Score: 4.5
              </span>
            </div>
          </div>
      )}


      </div>
    </div>

  
    {/* Absolute Badge for Background Variant (Floating above glass) */}
    {variant === 'background' && (
      <div class="absolute bottom-4 left-6 z-20 flex items-center gap-2 animate-fade-in-up" style="animation-delay: 0.5s;">
        <div class="flex items-center gap-1 rounded-full bg-[#00b67a]/10 border border-[#00b67a]/20 px-3 py-1 backdrop-blur-sm">
          <i class="fa-solid fa-star text-[8px] text-[#00b67a]"></i>
          <span class="text-[8px] font-black uppercase tracking-[0.2em] text-white/60">
            Trust Score: 4.5
          </span>
        </div>
      </div>
    )}



  <!-- Decorative Particles (Active in all modes) -->
  <div class="particles absolute inset-0 pointer-events-none">
    <div class="particle p1"></div>
    <div class="particle p2"></div>
    <div class="particle p3"></div>
  </div>

  <!-- Unique Theme Elements -->
  {currentTheme === 'cyber' && (
    <div class="absolute inset-0 border-[20px] border-white/5 pointer-events-none mask-corners"></div>
    <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-white/50 to-transparent scanline"></div>
  )}

  {currentTheme === 'liquid' && (
    <div class="absolute inset-0 overflow-hidden">
      <div class="liquid-blob blob-1"></div>
      <div class="liquid-blob blob-2"></div>
    </div>
  )}

  {currentTheme === 'tech' && (
    <div class="absolute inset-0 tech-grid opacity-30"></div>
    <div class="absolute top-0 left-0 w-full h-[1px] bg-white/20 tech-scan"></div>
  )}
</div>

<style>
  .dynamic-poster-container {
    background-color: #050505;
    transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  /* Decorative Particles */
  .particle {
    position: absolute;
    border-radius: 50%;
    background: white;
    opacity: 0.1;
    filter: blur(1px);
    animation: bounce 20s infinite alternate;
  }
  .p1 { width: 4px; height: 4px; top: 20%; left: 10%; animation-delay: -2s; }
  .p2 { width: 6px; height: 6px; bottom: 30%; right: 15%; animation-delay: -5s; }
  .p3 { width: 3px; height: 3px; top: 60%; left: 40%; animation-delay: -8s; }

  @keyframes bounce {
    0% { transform: translate(0, 0) scale(1); opacity: 0.1; }
    50% { transform: translate(100px, -100px) scale(1.5); opacity: 0.2; }
    100% { transform: translate(-50px, 50px) scale(0.8); opacity: 0.1; }
  }

  .dynamic-poster-container:hover .poster-content {
    animation-play-state: paused;
    transform: translateY(-12px) rotate(0deg) !important;
  }

  /* Variant Specifics */
  .variant-background {
    min-height: 100%;
  }

  /* Typography Scaling */
  .firm-name {
    font-size: clamp(1rem, 3.5vw, 1.8rem);
    line-height: 1.1;
    opacity: 0.95;
    margin-bottom: 0.5rem;
  }
  .discount-text {
    font-size: clamp(2rem, 7vw, 4rem);
    letter-spacing: -0.02em;
    white-space: nowrap;
  }

  /* THEME: CYBER */
  .theme-cyber .background-layer {
    background: 
      radial-gradient(circle at 0% 0%, var(--accent-color) 0%, transparent 50%),
      radial-gradient(circle at 100% 100%, var(--accent-color) 0%, transparent 50%),
      linear-gradient(to bottom, #111, #000);
    background-size: 200% 200%;
    animation: gradient-shift 10s ease infinite;
  }
  .theme-cyber .firm-name {
    text-shadow: 0 0 20px var(--accent-color);
  }
  .scanline {
    animation: scan 4s linear infinite;
  }

  /* THEME: MINIMAL */
  .theme-minimal .background-layer {
    background: linear-gradient(135deg, #ffffff 0%, #e5e7eb 50%, #ffffff 100%);
    background-size: 400% 400%;
    animation: soft-flow 12s ease infinite;
  }
  .theme-minimal::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(110deg, transparent 40%, rgba(255,255,255,0.8) 50%, transparent 60%);
    background-size: 300% 300%;
    animation: light-sweep 6s linear infinite;
    pointer-events: none;
    opacity: 0.1;
  }
  .theme-minimal .firm-name, .theme-minimal .discount-text, .theme-minimal .watermark {
    color: #000;
    mix-blend-mode: multiply;
  }
  .theme-minimal .divider {
    background-color: #000;
  }

  /* THEME: LIQUID */
  .theme-liquid .background-layer {
    background: radial-gradient(circle at center, #0a0a0a, #000);
  }
  .liquid-blob {
    position: absolute;
    width: 400px;
    height: 400px;
    background: var(--accent-color);
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.4;
    animation: float 15s infinite alternate;
  }
  .blob-2 {
    right: -100px;
    bottom: -100px;
    background: #6366f1;
    animation-delay: -7s;
    width: 500px;
    height: 500px;
  }

  /* THEME: TECH */
  .theme-tech .background-layer {
    background: radial-gradient(circle at center, #0f172a 0%, #020617 100%);
  }
  .tech-grid {
    background-image: 
      linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
    background-size: 40px 40px;
    animation: tech-pulse 5s ease-in-out infinite;
  }
  .tech-scan {
    animation: scan 5s linear infinite;
    opacity: 0.2;
  }

  /* THEME: BOLD */
  .theme-bold .background-layer {
    background: linear-gradient(45deg, var(--accent-color), #000);
    background-size: 400% 400%;
    animation: soft-flow 15s ease infinite;
  }
  .theme-bold .poster-content {
    padding: 3rem 1.5rem;
    animation: bolder-tilt 8s ease-in-out infinite;
  }
  .theme-bold .watermark {
    animation: watermark-pulse 10s ease-in-out infinite;
  }

  /* Animations */
  @keyframes scan {
    0% { top: -10%; }
    100% { top: 110%; }
  }
  @keyframes float {
    0% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(150px, 80px) scale(1.2); }
    66% { transform: translate(-80px, 150px) scale(0.8); }
    100% { transform: translate(0, 0) scale(1); }
  }
  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  @keyframes soft-flow {
    0% { background-position: 0% 0%; }
    50% { background-position: 100% 100%; }
    100% { background-position: 0% 0%; }
  }
  @keyframes light-sweep {
    0% { background-position: -200% center; }
    100% { background-position: 200% center; }
  }
  @keyframes tech-pulse {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.5; }
  }
  @keyframes bolder-tilt {
    0%, 100% { transform: rotate(-2deg) scale(1); }
    50% { transform: rotate(1deg) scale(1.05); }
  }
  @keyframes watermark-pulse {
    0%, 100% { transform: scale(1); opacity: 0.05; }
    50% { transform: scale(1.1); opacity: 0.08; }
  }
  @keyframes fade-in-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }
</style>
