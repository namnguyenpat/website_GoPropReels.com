---
import { getCollection } from 'astro:content';

const posts = (await getCollection('reviews', ({ data }) => data.category === 'Knowledge'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);
---

{posts.length > 0 ? (
    <div class="mt-6 flex flex-col gap-4">
        <h3 class="text-sm font-bold text-white/90 uppercase tracking-wider">Latest Posts</h3>
        <div class="flex flex-col gap-3">
            {posts.map((post) => (
                <a href={`/blog/${post.slug}/`} class="group flex items-center gap-3 rounded-xl border border-white/5 bg-white/5 p-2 hover:bg-white/10 transition-colors" title={post.data.title}>
                    <div class="aspect-square w-16 shrink-0 overflow-hidden rounded-lg bg-black/20">
                        {post.data.heroImage ? (
                            <img 
                                src={post.data.heroImage} 
                                alt={post.data.title}
                                class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                                loading="lazy"
                            />
                        ) : (
                            <div class="flex h-full w-full items-center justify-center bg-white/5 text-white/20">
                                <i class="fa-solid fa-image"></i>
                            </div>
                        )}
                    </div>
                    <div class="flex-1 min-w-0">
                        <h4 class="text-xs font-medium text-white group-hover:text-brand-accent transition-colors line-clamp-2">
                            {post.data.title}
                        </h4>
                        <span class="text-[10px] text-white/40 mt-1 block">
                            {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                        </span>
                    </div>
                </a>
            ))}
        </div>
    </div>
) : (
    <div class="mt-6 p-6 rounded-2xl border border-white/5 bg-white/[0.02] text-center">
        <p class="text-xs text-white/40 italic">New insights coming soon...</p>
    </div>
)}
