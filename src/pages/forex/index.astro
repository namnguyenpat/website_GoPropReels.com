---
import Layout from '../../layouts/Layout.astro';
import FirmCard from '../../components/FirmCard.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const categoryName = 'forex';
const allCoupons = await getCollection('coupons');

// Group by firm name to show Firms instead of individual deals
const categoryDeals = allCoupons
    .map(c => c.data)
    .filter(deal => deal.category.toLowerCase() === categoryName);

const uniqueFirms = [];
const seenFirms = new Set();

categoryDeals.forEach(deal => {
    if (!seenFirms.has(deal.firm_name)) {
        uniqueFirms.push(deal);
        seenFirms.add(deal.firm_name);
    }
});

uniqueFirms.sort((a, b) => a.firm_name.localeCompare(b.firm_name));

const pageTitle = "Best Forex Prop Firms & Funding Programs 2026 | GoPropReels";
const pageDescription = "Compare the top Forex prop firms including FTMO, Funding Pips, and more. Access up to $400K in funded capital with exclusive discount codes.";

const faqItems = [
    { q: "What is the best forex prop firm in 2026?", a: "FTMO remains highly rated for its reliability and massive community. However, firms like MyFundedFX and Funding Pips offer competitive alternatives with lower barrier to entry." },
    { q: "How much capital can I get from a Forex prop firm?", a: "Most firms offer accounts ranging from $5,000 to $200,000, with scaling plans that can reach up to $2,000,000 or more." }
];
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="relative min-h-screen bg-brand-bg selection:bg-brand-accent/30">
        {/* Background Gradients */}
        <div class="absolute inset-x-0 top-0 h-[500px] bg-gradient-to-b from-brand-accent/10 to-transparent pointer-events-none"></div>
        
        <Header />
        
        <main class="relative z-10 mx-auto max-w-6xl px-4 py-16">
            {/* Breadcrumb */}
            <nav class="mb-8 flex items-center gap-2 text-[10px] font-black uppercase tracking-widest text-white/30">
                <a href="/" class="hover:text-brand-accent transition">Home</a>
                <i class="fa-solid fa-chevron-right text-[8px]"></i>
                <span class="text-brand-accent">Forex Prop Firms</span>
            </nav>

            <header class="mb-16">
                <div class="inline-flex items-center gap-2 rounded-full bg-brand-accent/10 border border-brand-accent/20 px-3 py-1 text-[10px] font-black uppercase text-brand-accent mb-6">
                    <i class="fa-solid fa-chart-line"></i>
                    Market Intelligence
                </div>
                <h1 class="text-5xl font-black text-white sm:text-7xl tracking-tighter leading-none mb-6">
                    FOREX <span class="text-white/20">FUNDS</span>
                </h1>
                <p class="max-w-2xl text-lg text-white/50 leading-relaxed font-medium">
                    Verified intelligence on the world's leading Forex proprietary trading firms. Compare stats, evaluation rules, and active discount codes.
                </p>
                
                {/* Stats Row */}
                <div class="mt-10 grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="rounded-3xl border border-white/5 bg-white/5 p-6 backdrop-blur-sm">
                        <div class="text-[10px] font-black text-white/30 uppercase tracking-[0.2em] mb-2">Live Nodes</div>
                        <div class="text-2xl font-black text-white">{uniqueFirms.length} Firms</div>
                    </div>
                    <div class="rounded-3xl border border-white/5 bg-white/5 p-6 backdrop-blur-sm">
                        <div class="text-[10px] font-black text-white/30 uppercase tracking-[0.2em] mb-2">Max Account</div>
                        <div class="text-2xl font-black text-white">$400K+</div>
                    </div>
                    <div class="rounded-3xl border border-white/5 bg-white/5 p-6 backdrop-blur-sm">
                        <div class="text-[10px] font-black text-white/30 uppercase tracking-[0.2em] mb-2">Avg Split</div>
                        <div class="text-2xl font-black text-white">85%</div>
                    </div>
                    <div class="rounded-3xl border border-white/5 bg-white/5 p-6 backdrop-blur-sm">
                        <div class="text-[10px] font-black text-white/30 uppercase tracking-[0.2em] mb-2">Verified</div>
                        <div class="text-2xl font-black text-green-500">100%</div>
                    </div>
                </div>

                {/* Search Bar */}
                <div class="mt-12 relative max-w-md">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                        <i class="fa-solid fa-magnifying-glass text-white/20 text-sm"></i>
                    </div>
                    <input 
                        type="text" 
                        id="firm-search" 
                        placeholder="Search Forex firms (e.g. FTMO, Pips...)" 
                        class="w-full bg-white/5 border border-white/10 rounded-2xl py-4 pl-12 pr-4 text-white placeholder:text-white/20 focus:outline-none focus:ring-2 focus:ring-brand-accent/50 focus:border-brand-accent/50 transition-all font-medium"
                    />
                    <div id="search-count" class="absolute inset-y-0 right-4 flex items-center text-[10px] font-black text-white/20 uppercase tracking-widest pointer-events-none">
                        {uniqueFirms.length} Total
                    </div>
                </div>
            </header>

            {/* Firm Grid */}
            <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 mb-16" id="firm-grid">
                {uniqueFirms.map((firm, index) => (
                    <div 
                        class={`firm-card-wrapper ${index >= 9 ? 'hidden' : ''}`} 
                        data-firm-name={firm.firm_name.toLowerCase()}
                        data-index={index}
                        data-initial-visible={index < 9 ? 'true' : 'false'}
                    >
                        <FirmCard firm={firm} rank={index + 1} />
                    </div>
                ))}
            </div>

            {/* Pagination */}
            <div class={`flex justify-center mb-24 ${uniqueFirms.length <= 9 ? 'hidden' : ''}`} id="pagination-container">
                <button 
                    id="load-more-btn"
                    class="px-10 py-4 rounded-full bg-white/5 border border-white/10 text-white font-bold hover:bg-white/10 hover:border-white/20 transition-all active:scale-95 flex items-center gap-3"
                >
                    <span>Load More Firms</span>
                    <i class="fa-solid fa-plus text-xs"></i>
                </button>
            </div>

            {/* Rich Content Sections */}
            <div class="grid gap-16 lg:grid-cols-[1fr,350px]">
                <section class="space-y-12">
                    <div class="prose prose-invert max-w-none">
                        <h2 class="text-3xl font-black mb-6 flex items-center gap-3">
                            <span class="h-8 w-1.5 bg-brand-accent rounded-full"></span>
                            About Forex Prop Trading
                        </h2>
                        <p class="text-white/60 text-lg leading-relaxed italic">
                            Forex prop firms offer funded trading accounts for professional currency traders. By passing an evaluation, typically in one or two phases, traders gain access to company capital ranging from $5,000 to $400,000. 
                        </p>
                        <p class="text-white/60 leading-relaxed">
                            With firms like FTMO, Funding Pips, and E8 Markets, traders can keep up to 90% of the profits they generate. Our hub verifies each firm's payout history and trading rules to ensure you're partnering with reliable organizations.
                        </p>
                    </div>

                    <div class="space-y-6">
                        <h2 class="text-3xl font-black mb-8 flex items-center gap-3">
                            <span class="h-8 w-1.5 bg-brand-accent rounded-full"></span>
                            Frequently Asked Questions
                        </h2>
                        <div class="grid gap-4">
                            {faqItems.map(faq => (
                                <div class="rounded-3xl border border-white/10 bg-white/5 p-8">
                                    <h3 class="text-lg font-bold text-white mb-3">{faq.q}</h3>
                                    <p class="text-white/60 leading-relaxed">{faq.a}</p>
                                </div>
                            ))}
                        </div>
                    </div>
                </section>

                <aside class="space-y-8">
                    <div class="rounded-[32px] border border-brand-accent/20 bg-brand-accent/5 p-8 border-dashed">
                        <h3 class="text-xl font-black text-white mb-4 uppercase tracking-tight">Need Help?</h3>
                        <p class="text-sm text-white/60 leading-relaxed mb-6">
                            Not sure which Forex firm fits your trading style? Check our detailed deep-dives or contact our verification team.
                        </p>
                        <a href="/news" class="block text-center py-4 rounded-2xl bg-brand-accent text-white font-black uppercase text-[10px] tracking-widest hover:scale-[1.05] transition-all">
                            Latest Intelligence â†’
                        </a>
                    </div>
                </aside>
            </div>
        </main>

        <Footer />
    </div>
</Layout>

<script is:inline define:vars={{ totalFirms: uniqueFirms.length }}>
    document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('firm-search');
        const searchCount = document.getElementById('search-count');
        const loadMoreBtn = document.getElementById('load-more-btn');
        const paginationContainer = document.getElementById('pagination-container');
        const wrappers = document.querySelectorAll('.firm-card-wrapper');
        
        let visibleCount = 9;
        let isSearching = false;

        const updatePaginationVisibility = () => {
            if (paginationContainer) {
                if (isSearching || visibleCount >= totalFirms) {
                    paginationContainer.classList.add('hidden');
                } else {
                    paginationContainer.classList.remove('hidden');
                }
            }
        };

        // Search logic
        if (searchInput) {
            searchInput.addEventListener('input', (e) => {
                const term = e.target.value.toLowerCase().trim();
                isSearching = term.length > 0;
                let matches = 0;

                wrappers.forEach(wrapper => {
                    const name = wrapper.dataset.firmName || '';
                    const isInitial = wrapper.dataset.initialVisible === 'true';
                    const index = parseInt(wrapper.dataset.index);

                    if (isSearching) {
                        if (name.includes(term)) {
                            wrapper.classList.remove('hidden');
                            matches++;
                        } else {
                            wrapper.classList.add('hidden');
                        }
                    } else {
                        // Reset to pagination state
                        if (index < visibleCount) {
                            wrapper.classList.remove('hidden');
                        } else {
                            wrapper.classList.add('hidden');
                        }
                    }
                });

                if (searchCount) {
                    searchCount.textContent = isSearching ? (`${matches} Found`) : (`${totalFirms} Total`);
                }

                updatePaginationVisibility();
            });
        }

        // Pagination logic
        if (loadMoreBtn) {
            loadMoreBtn.addEventListener('click', () => {
                const nextCount = visibleCount + 9;
                
                wrappers.forEach(wrapper => {
                    const index = parseInt(wrapper.dataset.index);
                    if (index < nextCount) {
                        wrapper.classList.remove('hidden');
                    }
                });

                visibleCount = nextCount;
                updatePaginationVisibility();
            });
        }
    });
</script>
