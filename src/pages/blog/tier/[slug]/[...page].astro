---
import Layout from '../../../../layouts/Layout.astro';
import Header from '../../../../components/Header.astro';
import Footer from '../../../../components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths({ paginate }) {
  const allPosts = await getCollection('blog');
  
  const tiers = [
      { id: 'Tier 1', slug: 'tier-1' },
      { id: 'Tier 2', slug: 'tier-2' },
      { id: 'Tier 3', slug: 'tier-3' },
  ];

  return tiers.flatMap((t) => {
    const filteredPosts = allPosts.filter((post) => post.data.tier && post.data.tier.startsWith(t.id));
    filteredPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    return paginate(filteredPosts, {
      params: { slug: t.slug },
      pageSize: 15,
      props: { tier: t.id },
    });
  });
}

const { page } = Astro.props;
const { tier } = Astro.props; 
const { slug } = Astro.params;
---

<Layout title={`Posts in ${tier} (Page ${page.currentPage}) | GoPropReels`} description={`Browse all blog posts in ${tier} - Page ${page.currentPage}`}>
    <Header />
    <main class="min-h-screen bg-[#0f172a] py-20 px-4">
        <div class="max-w-7xl mx-auto">
            <div class="mb-12 text-center">
                <h1 class="text-4xl font-bold text-white mb-4">
                    Category <span class="text-brand-accent">{tier}</span>
                </h1>
                <p class="text-white/50 mb-4">Page {page.currentPage} of {page.lastPage}</p>
                <a href="/blog" class="text-white/50 hover:text-white transition-colors">
                    &larr; Back to Blog
                </a>
            </div>

            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {page.data.map((post) => (
                    <a href={`/blog/${post.slug}/`} class="group block bg-[#1e293b] border border-white/5 rounded-2xl overflow-hidden hover:border-brand-accent/30 transition-all duration-300 hover:-translate-y-1">
                        <div class="aspect-[16/9] overflow-hidden relative">
                            <img src={post.data.heroImage || '/og-image.jpg'} alt={post.data.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"></div>
                            {/* Tier Badge */}
                            <div class="absolute top-4 right-4 bg-black/60 backdrop-blur-md px-3 py-1 rounded-full text-xs font-bold text-white border border-white/10">
                                {post.data.tier || 'Article'}
                            </div>
                        </div>
                        <div class="p-6">
                            <div class="flex items-center gap-2 text-xs text-brand-accent mb-3 font-medium uppercase tracking-wider">
                                <span>{post.data.tags?.[0] || 'Insight'}</span>
                            </div>
                            <h3 class="font-bold text-white text-xl mb-3 leading-snug group-hover:text-brand-accent transition-colors line-clamp-2">
                                {post.data.title}
                            </h3>
                            <p class="text-white/50 text-sm line-clamp-2 mb-4">
                                {post.data.description}
                            </p>
                            <div class="flex items-center justify-between text-xs text-white/30 border-t border-white/5 pt-4">
                                <time datetime={post.data.pubDate.toISOString()}>
                                    {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                                </time>
                                <span class="group-hover:translate-x-1 transition-transform">Read More &rarr;</span>
                            </div>
                        </div>
                    </a>
                ))}
            </div>

            <div class="mt-12 flex justify-center gap-4">
                {page.url.prev ? (
                    <a href={page.url.prev} class="px-6 py-2 bg-[#1e293b] text-white rounded-lg hover:bg-brand-accent transition-colors">
                        &larr; Previous
                    </a>
                ) : (
                    <span class="px-6 py-2 bg-white/5 text-white/30 rounded-lg cursor-not-allowed">
                        &larr; Previous
                    </span>
                )}
                
                <span class="px-4 py-2 text-white/50 font-mono">
                    {page.currentPage} / {page.lastPage}
                </span>

                {page.url.next ? (
                    <a href={page.url.next} class="px-6 py-2 bg-[#1e293b] text-white rounded-lg hover:bg-brand-accent transition-colors">
                        Next &rarr;
                    </a>
                ) : (
                    <span class="px-6 py-2 bg-white/5 text-white/30 rounded-lg cursor-not-allowed">
                        Next &rarr;
                    </span>
                )}
            </div>
        </div>
    </main>
    <Footer />
</Layout>
