---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths({ paginate }) {
    const allReviews = await getCollection('reviews');
    const knowledgePosts = allReviews
        .filter(p => p.data.category === 'Knowledge')
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    return paginate(knowledgePosts, { pageSize: 12 });
}

const { page } = Astro.props;
---

<Layout title="Prop Trading Knowledge & Guides | GoPropReels" description="Educational content, trading guides, and firm comparisons for professional traders.">
    <Header />
    
    <main class="min-h-screen bg-brand-bg pb-24">
        {/* Knowledge Hero */}
        <div class="relative py-20 px-4 overflow-hidden border-b border-white/5 bg-white/5">
            <div class="absolute inset-0 bg-brand-accent/5 blur-3xl opacity-30"></div>
            <div class="max-w-4xl mx-auto text-center relative z-10">
                <div class="inline-flex items-center gap-2 rounded-full bg-brand-accent/10 border border-brand-accent/20 px-4 py-1.5 text-xs font-black uppercase text-brand-accent mb-8">
                    <i class="fa-solid fa-graduation-cap"></i>
                    Trading Academy
                </div>
                <h1 class="text-5xl md:text-7xl font-black mb-6 tracking-tight text-white">
                    Trading <span class="text-brand-accent">Knowledge</span>
                </h1>
                <p class="text-white/60 text-xl max-w-2xl mx-auto leading-relaxed">
                    Master the art of prop trading with our deep-dive guides, strategy breakdowns, and industry insights.
                </p>
            </div>
        </div>

        <div class="max-w-6xl mx-auto px-4 mt-16">
            {page.data.length > 0 ? (
                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                    {page.data.map(post => (
                        <a href={`/blog/${post.slug}/`} class="group flex flex-col bg-white/5 rounded-3xl overflow-hidden border border-white/10 hover:border-brand-accent/30 transition-all duration-300 hover:-translate-y-2">
                            <div class="p-8 flex flex-col h-full">
                                <div class="flex items-center gap-3 text-xs text-brand-accent mb-4 font-bold uppercase tracking-widest">
                                    <i class="fa-solid fa-book-open text-[10px]"></i>
                                    <span>{post.data.category || 'Guide'}</span>
                                </div>
                                <h2 class="text-2xl font-black text-white mb-4 leading-tight group-hover:text-brand-accent transition-colors line-clamp-2">
                                    {post.data.title}
                                </h2>
                                <p class="text-white/50 text-sm line-clamp-3 mb-8 flex-1">
                                    {post.data.description}
                                </p>
                                <div class="flex items-center justify-between pt-6 border-t border-white/5 text-xs text-white/30">
                                    <time datetime={post.data.pubDate.toISOString()}>
                                        {post.data.pubDate.toLocaleDateString('en-us', { year: 'numeric', month: 'short', day: 'numeric' })}
                                    </time>
                                    <span class="group-hover:translate-x-1 transition-transform font-bold text-white/50">Read Guide &rarr;</span>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            ) : (
                <div class="flex flex-col items-center justify-center py-32 text-center">
                    <div class="w-24 h-24 rounded-full bg-white/5 flex items-center justify-center mb-8 border border-white/10">
                        <i class="fa-solid fa-graduation-cap text-4xl text-brand-accent/40"></i>
                    </div>
                    <h2 class="text-3xl font-black text-white mb-4 italic uppercase tracking-tighter">Content Coming Soon</h2>
                    <p class="text-white/40 max-w-sm mx-auto">
                        Our expert traders are preparing deep-dive guides and educational strategy scripts. Stay tuned.
                    </p>
                </div>
            )}
        </div>

            {/* Pagination */}
            <div class="flex justify-center items-center gap-4 mt-20">
                {page.url.prev ? (
                    <a href={page.url.prev} class="px-8 py-3 rounded-full bg-white/5 border border-white/10 text-white font-black hover:bg-brand-accent hover:border-brand-accent transition-all text-sm uppercase tracking-widest">
                        Previous
                    </a>
                ) : (
                    <span class="px-8 py-3 rounded-full bg-white/5 border border-white/5 text-white/20 cursor-not-allowed text-sm font-black uppercase tracking-widest">
                        Previous
                    </span>
                )}
                
                <span class="text-white/40 font-black text-sm uppercase tracking-widest">
                    {page.currentPage} / {page.lastPage}
                </span>

                {page.url.next ? (
                    <a href={page.url.next} class="px-8 py-3 rounded-full bg-white/5 border border-white/10 text-white font-black hover:bg-brand-accent hover:border-brand-accent transition-all text-sm uppercase tracking-widest">
                        Next
                    </a>
                ) : (
                    <span class="px-8 py-3 rounded-full bg-white/5 border border-white/5 text-white/20 cursor-not-allowed text-sm font-black uppercase tracking-widest">
                        Next
                    </span>
                )}
            </div>
        </div>
    </main>

    <Footer />
</Layout>
