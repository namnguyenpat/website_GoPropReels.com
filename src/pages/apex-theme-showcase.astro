---
import Layout from '../layouts/Layout.astro';
import DynamicPoster from '../components/DynamicPoster.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const apexThemes = [
  {
    name: 'Cyber Theme',
    theme: 'cyber',
    firm: 'Apex Trader Funding',
    discount: '80% OFF',
    color: '#00f2ff',
    desc: 'Neon glows and high-tech digital aesthetics.'
  },
  {
    name: 'Minimal Luxury',
    theme: 'minimal',
    firm: 'Apex Trader Funding',
    discount: '80% OFF',
    color: '#ffffff',
    desc: 'Clean, professional, and high-contrast typography.'
  },
  {
    name: 'Liquid Flow',
    theme: 'liquid',
    firm: 'Apex Trader Funding',
    discount: '80% OFF',
    color: '#FFD700',
    desc: 'Gold gradients with organic moving shapes.'
  },
  {
    name: 'Tech Grid',
    theme: 'tech',
    firm: 'Apex Trader Funding',
    discount: '80% OFF',
    color: '#3b82f6',
    desc: 'Industrial grid patterns with technical monospace accents.'
  },
  {
    name: 'Bold Impact',
    theme: 'bold',
    firm: 'Apex Trader Funding',
    discount: '80% OFF',
    color: '#ff2d55',
    desc: 'High-impact design with large background watermarks.'
  }
];
---

<Layout title="Apex Theme Showcase | GoPropReels" description="Check out the 5 theme variants for Apex Trader Funding.">
  <Header />
  
  <main class="mx-auto max-w-7xl px-4 py-24 pt-32 bg-brand-bg">
    <div class="mb-16 text-center">
      <h1 class="text-5xl font-black text-white">Apex Theme Showcase</h1>
      <p class="mt-4 text-xl text-white/60">
        Comparing the 5 dynamic themes for the Apex Trader Funding 80% OFF deal.
      </p>
    </div>

    <div class="space-y-32">
        {/* Full View Section */}
        <section>
            <h2 class="text-3xl font-bold text-white mb-10 border-l-4 border-brand-accent pl-6">Full Poster View</h2>
            <div class="grid gap-12 sm:grid-cols-2 lg:grid-cols-3">
            {apexThemes.map((item) => (
                <div class="group space-y-4">
                <div class="aspect-[9/16] w-full shadow-2xl transition hover:scale-[1.02] rounded-3xl overflow-hidden border border-white/10">
                    <DynamicPoster 
                    firmName={item.firm}
                    discount={item.discount}
                    themeColor={item.color}
                    forceTheme={item.theme as any}
                    variant="full"
                    />
                </div>
                <div class="px-2">
                    <h3 class="text-2xl font-bold text-white tracking-tight">{item.name}</h3>
                    <p class="mt-1 text-sm text-white/50 leading-relaxed">{item.desc}</p>
                </div>
                </div>
            ))}
            </div>
        </section>

        {/* Home Card View Section */}
        <section>
            <h2 class="text-3xl font-bold text-white mb-10 border-l-4 border-purple-500 pl-6">Home Card View (Compact)</h2>
            <p class="mb-8 text-white/60 -mt-6">How these themes adapt to the homepage "For You Feed" grid.</p>
            <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5">
            {apexThemes.map((item) => (
                <div class="group space-y-4">
                <div class="aspect-[9/16] w-full shadow-xl transition hover:scale-[1.05] rounded-3xl overflow-hidden border border-white/10 ring-1 ring-white/5">
                    <DynamicPoster 
                    firmName={item.firm}
                    discount={item.discount}
                    themeColor={item.color}
                    forceTheme={item.theme as any}
                    variant="background"
                    />
                </div>
                <div class="px-2">
                    <h4 class="text-lg font-bold text-white/80">{item.theme.toUpperCase()}</h4>
                </div>
                </div>
            ))}
            </div>
        </section>
    </div>
  </main>

  <Footer />
</Layout>
